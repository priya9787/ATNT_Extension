{
  "manifest_version": 3,
  "name": "Super Ad Blocker",
  "version": "1.0",
  "description": "Blocks annoying ads!",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "scripting", "activeTab","tabs","idle","alarms", "notifications"],
  "host_permissions": ["<all_urls>"]
}
